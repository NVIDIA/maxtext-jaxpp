{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug MaxText Decode",
      "type": "debugpy",
      "request": "launch",
      "console": "integratedTerminal",
      "justMyCode": false,
      "python": "python3",
      "program": "${workspaceFolder}/MaxText/decode.py",
      "args": [
        "MaxText/configs/base.yml",
        "run_name=runner_$(date +%Y-%m-%d-%H-%M)",
        "base_output_directory=gs://test-maxtext-output",
        "dataset_path=gs://test-maxtext-dataset",
        "steps=2",
        "attention=dot_product",
        "enable_checkpointing=false"
      ]
    },
    {
      "name": "Debug MaxText Train",
      "type": "debugpy",
      "request": "launch",
      "console": "integratedTerminal",
      "justMyCode": false,
      "python": "python3",
      "program": "${workspaceFolder}/MaxText/train.py",
      "args": ["MaxText/configs/base.yml", 
               "run_name=runner_$(date +%Y-%m-%d-%H-%M)", 
               "base_output_directory=gs://test-maxtext-output",
               "dataset_path=gs://test-maxtext-dataset",
               "steps=2",
               "enable_checkpointing=false"]
    },
    {
      "name": "Debug MaxText Inference Microbenchmark",
      "type": "python",
      "request": "launch",
      "console": "integratedTerminal",
      "justMyCode": false,
      "python": "python3",
      "program": "${workspaceFolder}/MaxText/inference_microbenchmark.py",
      "args": [
        "MaxText/configs/base.yml",
        "model_name=llama2-7b",
        "tokenizer_path=assets/tokenizer.llama2",
        "weight_dtype=bfloat16",
        "scan_layers=false",
        "attention=dot_product",
        "max_prefill_predict_length=1024",
        "max_target_length=2048",
        "ici_fsdp_parallelism=1",
        "ici_tensor_parallelism=-1",
        "ici_autoregressive_parallelism=1",
        "inference_microbenchmark_prefill_lengths=32,64,128,256,512,1024",
        "inference_microbenchmark_stages=generate",
        "inference_microbenchmark_loop_iters=1",
        "run_name=runner_$(date +%Y-%m-%d-%H-%M)", 
        "base_output_directory=gs://test-maxtext-output",
        "prefill_cache_axis_order=0,2,1,3",
        "ar_cache_axis_order=0,2,1,3",
        "compute_axis_order=0,2,1,3",
        "reshape_q=true",
        "per_device_batch_size=24",
        "quantization=int8",
        "quantize_kvcache=True",
      ]
    },
    {
      "name": "JaxPP Debug MaxText Train 2x2x2",
      "type": "debugpy",
      "request": "launch",
      "console": "integratedTerminal",
      "justMyCode": false,
      "python": "python3",
      "program": "${workspaceFolder}/MaxText/train.py",
      "args": [
        "MaxText/configs/base.yml",
        "run_name=runner_jaxpp_$(date +%Y-%m-%d-%H-%M)",
        "base_output_directory=/tmp/log",
        "hardware=gpu",
        "dataset_type=synthetic",
        //
        "model_name=gpt3-52k",
        "steps=20",
        "dtype=bfloat16",
        // "quantization=fp8",
        "max_target_length=1024",
        "per_device_batch_size=4",
        "dcn_data_parallelism=2",
        "ici_tensor_parallelism=2",
        "ici_pipeline_parallelism=2",
        "num_pipeline_repeats=1",
        "num_pipeline_microbatches=2",
        "enable_checkpointing=false",
        "use_jaxpp=True", // Flags below are ignored when `use_jaxpp=False`
        "distributed_initialization=True",
        "use_pgle=False",
      ],
      "env": {
        // "CUDA_VISIBLE_DEVICES": "0,1",
        "RAY_DEDUP_LOGS": "0",
        "RAY_ADDRESS": "local",
        // "JAX_TRACEBACK_FILTERING": "off"
        // "XLA_FLAGS": "--xla_dump_to=hlos_plain --xla_dump_hlo_pass_re=.*",
        // "CUBLASLT_LOG_MASK": "63"
      }
    }
  ]
}